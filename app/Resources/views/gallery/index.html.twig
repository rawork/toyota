    <div class="modal-dialog">
        <a href="#" class="modal-close"></a>
        <div class="modal-pictures">
            <div class="modal-picture">
                <img src="">
                <div class="relative">
                    <div class="place"><span></span></div>
                    <a href="#" class="popup-prev"></a>
                    <a href="#" class="popup-next"></a>
                </div>
                <div class="title"></div>
                <div class="person"></div>
                <div class="idea"></div>
            </div>
        </div>
    </div>
</div>


